<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="MINS"
        app:layout_constraintEnd_toEndOf="@+id/duration_minute_input"
        app:layout_constraintStart_toStartOf="@+id/duration_minute_input"
        app:layout_constraintTop_toBottomOf="@+id/duration_minute_input" />

    <Button
        android:id="@+id/five_rating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_star_rate_24"
        android:minWidth="30dp"
        android:text="5"
        android:drawableTint="@color/dusk_yellow"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/four_rating_button"
        app:layout_constraintTop_toTopOf="@+id/four_rating_button" />

    <Button
        android:id="@+id/four_rating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_star_rate_24"
        android:minWidth="30dp"
        android:text="4"
        android:drawableTint="@color/dusk_yellow"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@+id/five_rating_button"
        app:layout_constraintStart_toEndOf="@+id/three_rating_button"
        app:layout_constraintTop_toTopOf="@+id/three_rating_button" />

    <Button
        android:id="@+id/three_rating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_star_rate_24"
        android:minWidth="30dp"
        android:text="3"
        android:drawableTint="@color/dusk_yellow"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@+id/four_rating_button"
        app:layout_constraintStart_toEndOf="@+id/two_rating_button"
        app:layout_constraintTop_toTopOf="@+id/two_rating_button" />

    <Button
        android:id="@+id/two_rating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableRight="@drawable/ic_baseline_star_rate_24"
        android:minWidth="30dp"
        android:text="2"
        android:drawableTint="@color/dusk_yellow"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@+id/three_rating_button"
        app:layout_constraintStart_toEndOf="@+id/any_rating_button"
        app:layout_constraintTop_toTopOf="@+id/any_rating_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Date Range"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/edit_date_range"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_date_range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_edit_calendar_24"
        android:minHeight="48dp"
        android:text="Please select"
        android:drawableTint="@color/grey"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Location"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/edit_date_range" />

    <Spinner
        android:id="@+id/location_spinner"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:minHeight="48dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/edit_date_range"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Min User Rating"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/location_spinner" />

    <Button
        android:id="@+id/any_rating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:minWidth="30dp"
        android:text="Any"
        android:textColor="@color/grey"
        app:layout_constraintEnd_toStartOf="@+id/two_rating_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Min Duration"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/any_rating_button" />

    <Button
        android:id="@+id/apply_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Apply Filter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clear_filters_button"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/duration_hour_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="3"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        android:backgroundTint="@color/blue_200"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/location_spinner"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <EditText
        android:id="@+id/duration_minute_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:ems="3"
        android:inputType="numberSigned"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/duration_hour_input"
        app:layout_constraintStart_toEndOf="@+id/duration_hour_input"
        app:layout_constraintTop_toTopOf="@+id/duration_hour_input" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="HOURS"
        app:layout_constraintEnd_toEndOf="@+id/duration_hour_input"
        app:layout_constraintStart_toStartOf="@+id/duration_hour_input"
        app:layout_constraintTop_toBottomOf="@+id/duration_hour_input" />

    <Button
        android:id="@+id/clear_filters_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Clear all"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="@+id/apply_filter_button"
        app:layout_constraintEnd_toStartOf="@+id/apply_filter_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/apply_filter_button" />
</androidx.constraintlayout.widget.ConstraintLayout>